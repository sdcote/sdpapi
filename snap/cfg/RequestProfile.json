{
  "RtwJob":{

    "Vault": { "filename": "[#$sys.app.home#][#$sys.file.separator#]sdp.vault", "password": "[#$env.vault.password#]" },

    "Preprocess": {
    },

    "Reader": {
      "class": "ServiceDeskApiReader",
      "clientId": "[#Vault.get(RequestAutomation,Username)#]",
      "clientSecret": "[#Vault.get(RequestAutomation,Password)#]",
      "clientToken": "[#Vault.get(RequestAutomation,Token)#]",
      "endpoint": "/requests",
      "resultField": "requests",
      "batch": 10,
      "flatten": false,
      "limit": 10
    },

    "Filter": {
    },

    "Mapper" : {
    },

    "Listener": {"DataProfiler": { "target": "[#$sys.user.dir#][#$sys.file.separator#]dataprofile.txt"}},

    "Writer": { "class": "JsonWriter", "target": "[#$sys.user.dir#][#$sys.file.separator#]requests.json" },
    "Writer": { "class": "ConsoleWriter", "format": "json" },

    "Logging": {
      "ConsoleAppender": { "target": "STDERR", "categories": "error, fatal, warn" },
      "ConsoleAppender": { "target": "STDOUT", "categories": "info, notice, debug" },
      "FileAppender": {  "target": "debug.log", "categories": "debug, trace" }
    }

  }

}